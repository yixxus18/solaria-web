---
import imagen from "../assets/footer3_optimized_.jpg";
import solaria from "../assets/solaria22.png";
import whats from "../assets/whatsapp-logo.svg";
import linkedin from "../assets/insta.svg";
import facebook from "../assets/facebook-logo.svg";
import phone from "../assets/phone.svg";
import envelope from "../assets/envelope.svg";
const currentYear = new Date().getFullYear();
---

<div
  style={`position: relative; background-image: url(${imagen.src});  background-size: cover; background-position: center; height: 50vh; margin-left: 0; margin-right: 0;`}>
  <div
    style="background-color: rgba(23, 56, 109, 0.3); position: absolute; top: 0; bottom: 0; left: 0; right: 0;">
  </div>

  <div
    style="position: relative; display: flex; justify-content: center; align-items: center; height: 100%; flex-direction: column;">
    <img src={solaria.src} alt="" />
    <br />
    <div style="display: flex; justify-content: center;">
      <a
        href="https://www.facebook.com/profile.php?id=61552188621995"
        target="_blanck"><img src={facebook.src} alt="Facebook" /></a
      >
      <a href="https://www.instagram.com/solaria_laguna" target="_blanck"
        ><img src={linkedin.src} alt="LinkedIn" /></a
      >
      <a href="https://wa.me/528712414205" target="_blanck"
        ><img src={whats.src} alt="WhatsApp" /></a
      >
      <a href="tel:8712414205" target="_blanck"
        ><img src={phone.src} alt="Teléfono" /></a
      >
      <a href="mailto:solaria@telcolaguna.com.mx" target="_blanck"
        ><img src={envelope.src} alt="Correo" /></a
      >
    </div>
    <br />
    <p style="color: white; text-align: center;" class="font-bold text-xl">
      Todos los derechos reservados <a href="Solaria Laguna">Solaria Laguna</a>,
      S.A. © {currentYear}
    </p>
    <p style="color: white; text-align: center;" class="font-semibold text-5lg">
      Diseñado por: Jose Valero & Jesus Corona
    </p>
  </div>
</div>
