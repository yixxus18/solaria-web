---
import fond from '../assets/s3.jpg';
import solaria from '../assets/logo.png';
---
<div class="hidden sm:block">
  <style>
    @keyframes slideDown {
      from {
        transform: translateY(-100%);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }
    html {
      scroll-behavior: smooth;
    }
  </style>

  <h1 class="hidden">Solaria Laguna</h1>
  <div style={`position: relative; background-image: url(${fond.src}); background-attachment: fixed; background-size: cover; background-repeat: no-repeat; background-position: center center; height: 100vh; margin-left: 0; margin-right: 0;`}>
    <div style="position: relative; display: flex; justify-content: center; align-items: center; height: 100%;">
      <h2 class="text-5xl text-center text-white tracking-wider">
        <img src={solaria.src} alt="Solaria Logo" style="animation: slideDown 3s ease-out forwards;">
      </h2>
      <div style="position: absolute; bottom: 0; width: 100%; display: flex; justify-content: center;">
        <a href="#solaria-laguna">
          <svg xmlns="http://www.w3.org/2000/svg" width="46" height="46" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" class="hover:stroke-yellow-400 animate-bounce w-10 h-10">
            <path d="M7 13l5 5 5-5M7 6l5 5 5-5"/>
          </svg>
        </a>
      </div>
    </div>
  </div>